}


% generates a abstract page
\newcommand{\printtheabstract}[2][]{
\begin{titlepage}

\null\vfil
\begin{center}
\sffamily\bfseries {#2}
\end{center}
\theabstractfirst

\ifthenelse{\isempty{#1}}%
{}% #1 is empty
{\vspace{0.5cm}\begin{center}
\sffamily\bfseries {#1}
\end{center}
\theabstractsec}
\par\vfil\null

\end{titlepage}
}

% generates a statement page
\newcommand{\printthestatement}[1]{
\begin{titlepage}

\null\vfil

\begin{center}
\sffamily\bfseries {#1}
\end{center}
\thestatement

\par\vfil\null

\end{titlepage}
}